/* 水平间距 */
.avatar-box {
  width: 100%;
  display: flex;
  padding: 50px 0;
  align-items: center;
  flex-direction: column;
}
.avatar-box .avatar-wrapper {
  width: 90px;
  height: 90px;
  padding: 0;
  border-radius: 90px;
}
.avatar-box .avatar-wrapper .avatar {
  width: 100%;
  height: 100%;
}
.avatar-box .weui-input {
  width: 90px;
  height: 50px;
  color: gray;
  line-height: 50px;
  border-radius: 5px;
  text-align: center;
}
.set-box .set-item {
  display: flex;
  justify-content: space-between;
  padding: 10px 10px;
}
.login-box {
  width: 100%;
  padding: 50px 0;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.login-box .login-img {
  width: 90px;
  height: 90px;
  border-radius: 90px;
}
.login-box .login-form {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  align-items: center;
}
.login-box .login-form input {
  width: 350px;
  height: 50px;
  border: 1px solid gray;
  border-radius: 5px;
  padding-left: 10px;
  margin-top: 15px;
}
.login-box .login-form image {
  float: left;
  width: 25px;
  height: 25px;
  margin-left: -25px;
  padding-top: 12px;
  padding-left: -5px;
}
.login-box .login-btn {
  height: 50px;
  width: 350px;
  background-color: #c00000;
  border-radius: 50px;
  text-align: center;
  line-height: 50px;
  margin: 15px 0;
}
.login-box text {
  font-size: 13px;
  color: gray;
}

